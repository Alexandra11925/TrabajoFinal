    <div class="listado">
        <% productos.forEach(producto => { %>
            <article class="producto-item">
                <img src="/images/<%= producto.imagen%>" class="uñas" alt="<%= producto.nombre %>">
                <div class="main-article">
                    <p class="precio">$<%= producto.precio %></p>
                    <i class="fa-solid fa-cart-shopping"></i>
                </div>
                <h4 class="descripcion"><%= producto.nombre %></h4>
                <div class="opciones">
                    <!-- <p>Categoría: <%= producto.Categoria ? producto.Categoria.nombre : 'Sin Categoría' %></p> -->
        
                    <form action="/productos/<%=producto.id_producto%>/edit">
                        <button>Editar</button>

                        </form>
                    <form action="/productos/<%=producto.id_producto%>?_method=DELETE" method="POST">
                        <button type="submit">Eliminar</button>
                    </form>
                </div>
            </article>
        <% }) %>
    </div>
    

    <a class="inic" href="/">Volver al Inicio</a>

